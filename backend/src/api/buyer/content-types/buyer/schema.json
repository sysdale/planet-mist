{
  "kind": "collectionType",
  "collectionName": "buyers",
  "info": {
    "singularName": "buyer",
    "pluralName": "buyers",
    "displayName": "Buyer",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "buyerName": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "email": {
      "type": "email",
      "unique": true,
      "required": true
    },
    "password": {
      "type": "password",
      "required": true,
      "minLength": 6
    },
    "type": {
      "type": "string",
      "required": true,
      "default": "user"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "buyerID_fk"
    },
    "invoices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::invoice.invoice",
      "mappedBy": "buyerID_fk"
    },
    "group": {
      "type": "integer"
    }
  }
}
